@model HRP.ViewModels.RegisterVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_PoliceLayout.cshtml";
}
<h1>Profile</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <section>
            <form method="post" asp-controller="Police" asp-action="UpdateProfile">
                @Html.AntiForgeryToken()




                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row col-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.user.sin, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.user.sin, new { @class = "form-control", @type = "text", value = Model.user.sin, @readonly = "readonly" })
                            @*@Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })*@
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.user.fname, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.user.fname, new { @class = "form-control", value = Model.user.fname })
                            @*@Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.user.lname, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.user.lname, new { @class = "form-control", value = Model.user.lname })
                        @*@Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.user.email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.user.email, new { @class = "form-control", value = Model.user.email })
                        @*@Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.user.password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">

                        @Html.ActionLink("Update Password", "PasswordUpdate", "Police")
                    </div>
                </div>


                @Html.HiddenFor(m => m.user.password, new { @class = "form-control", value = Model.user.password })
                @*@Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })*@




                <div class="form-group">
                    @Html.LabelFor(m => m.user.contact, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.user.contact, new { @class = "form-control", @type = "number", value = Model.user.contact })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.user.gender, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.user.gender, new { @class = "form-control", @type = "text", value = Model.user.gender, @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.user.dob, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.user.dob, new { @class = "form-control", @type = "text", value = Model.user.dob, @readonly = "readonly" })
                        @*@Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.address.door_no, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.address.door_no, new { @class = "form-control", value = Model.address.door_no })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.address.street_name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.address.street_name, new { @class = "form-control", value = Model.address.street_name })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.address.unit, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.address.unit, new { @class = "form-control", value = Model.address.unit })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.address.city, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.address.city, new { @class = "form-control", value = Model.address.city })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.address.province, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.address.province, new { @class = "form-control", value = Model.address.province })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.address.postal_code, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.address.postal_code, new { @class = "form-control", value = Model.address.postal_code })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.address.country, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.address.country, new { @class = "form-control", value = Model.address.country })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">UPDATE</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div> 