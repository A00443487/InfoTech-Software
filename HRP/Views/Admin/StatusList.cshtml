
@model IEnumerable<Status>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var title = "Complaint-Status Management";
    ViewData["Title"] = title;
}

<h2>@title</h2>

<h3><a asp-action="StatusCreate" class="btn btn-sm btn-secondary">Create</a></h3>
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr><th>Status ID</th><th>Status Name</th></tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr><td colspan="7" class="text-center">No Model Data</td></tr>

        }
        else
        {
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.id</td>
                    <td>@p.name</td>


                    <td><a asp-action="StatusUpdate" asp-route-id="@p.id">Update</a></td>
                    <td>
                        <form asp-action="StatusDelete" method="post" asp-route-id="@p.id">
                            <button>Delete</button>
                        </form>
                    </td>
                </tr>

            }
        }
    </tbody>
</table>
