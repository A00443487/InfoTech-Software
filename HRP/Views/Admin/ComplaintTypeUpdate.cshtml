
@model ComplaintType
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var title = "Complaint-Type Management";
    ViewData["Title"] = title;

}
<div class="row">
    <div class="col-md-8">
        <section>
            <form name="login" method="post" asp-controller="Admin" asp-action="ComplaintTypeUpdated">
                @Html.AntiForgeryToken()

                <h4>@title</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">

                    @Html.LabelFor(m => m.id, new { @class = "col-md-8 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.id, new { @class = "form-control", id = "id", @Value = Model.id, autofocus = "", @readonly = "readonly" })

                        @Html.ValidationMessageFor(m => m.id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control", id = "name", @Value = Model.name })
                        @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">UPDATE</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
