
@model Admin
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var title = "Admin Profile";
    ViewData["Title"] = title;
}


<div class="row">
    <div class="col-md-8">
        <section>
            <form name="login" method="post" asp-controller="Login" asp-action="AdminLogin">
                @Html.AntiForgeryToken()

                <h4>Admin Log In.</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">

                    @Html.LabelFor(m => m.sin, new { @class = "col-md-8 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.sin, new { @class = "form-control", id = "sin", @readonly = "readonly", autofocus = "", value = Model.sin })


                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.username, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.username, new { @class = "form-control", id = "username", @readonly = "readonly", value = Model.username })


                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.ActionLink("Update Password", "PasswordUpdate", "Admin")


                    </div>
                </div>
           
            </form>
        </section>
    </div>
</div>
